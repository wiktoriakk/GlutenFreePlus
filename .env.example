# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL database settings
DB_HOST=glutenfreeplus-db-1
DB_PORT=5432
DB_NAME=glutenfree_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ==================== APPLICATION SETTINGS ====================
# Environment: development, production, testing
APP_ENV=development

# Enable/disable debug mode (true for development, false for production)
APP_DEBUG=true

# Application URL (used for redirects and asset URLs)
APP_URL=http://localhost:8081

# Application name
APP_NAME="GlutenFree+"

# ==================== SECURITY SETTINGS ====================
# Session lifetime in seconds (7200 = 2 hours)
SESSION_LIFETIME=7200

# CSRF token lifetime in seconds (3600 = 1 hour)
CSRF_TOKEN_LIFETIME=3600

# Maximum login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5

# Login lockout duration in seconds (900 = 15 minutes)
LOGIN_LOCKOUT_DURATION=900

# Rate limiting window in seconds (900 = 15 minutes)
RATE_LIMIT_WINDOW=900

# Rate limit - max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ==================== FILE UPLOAD SETTINGS ====================
# Maximum file upload size in bytes (5242880 = 5MB)
MAX_UPLOAD_SIZE=5242880

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# Upload directory path (relative to public/)
UPLOAD_PATH=/public/images/recipes/

# ==================== EMAIL SETTINGS (Optional) ====================
# SMTP settings for email notifications
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@glutenfreeplus.com
MAIL_FROM_NAME="GlutenFree+"

# ==================== LOGGING ====================
# Log level: debug, info, warning, error
LOG_LEVEL=debug

# Log file path
LOG_PATH=logs/app.log

# ==================== EXTERNAL APIS (Optional) ====================
# Google Maps API key for location services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==================== TIMEZONE ====================
# Application timezone
TIMEZONE=Europe/Warsaw

# ==================== NOTES ====================
# Copy this file to .env and configure your actual values
# Never commit .env file to version control
# Keep .env.example updated with new variables (without sensitive values)